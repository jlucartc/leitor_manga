<div id="conteudo">
	<div id="cabecalho">
		<div id="cabecalho-pagina">
			<div id="titulo-pagina">Favoritos</div>
			<div id="status-pagina"><%= @favoritos.count %> favoritos</div>
		</div>
		<div id="ver-manga-controles">
			<button id="botao-editar">Editar</button>
			<button id="botao-excluir">Excluir</button>
		</div>
	</div>
	<div id="itens-container-lista">
		<% if @favoritos.present? %>
			<% @favoritos.each do |favorito|%>
				<div id="manga-item-grade"><%= favorito.manga.titulo %></div>
			<% end %>
		<% end %>
	</div>
</div>